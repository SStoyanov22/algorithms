{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Connect to Delve",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "env": {},
            "args": []
        },
        {
            "name": "Run TS Solution",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${file}"],
            "cwd": "${workspaceFolder}/typescript",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug TS Solution",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${file}"],
            "cwd": "${workspaceFolder}/typescript",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"],
            "stopOnEntry": false
        }
    ]
}
